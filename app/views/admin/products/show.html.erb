
<br>
<h1 class="customheading display-4"> <%= @admin_product.name %>'s data </h1>

<table class="table table-bordered table-hover bg-light ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th> Tags </th>
      <th> action </th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @admin_product.name %></td>
        <td><%= @admin_product.price %></td>
        <% if @admin_product.tag_list != nil %>
        <td><% @admin_product.tag_list.each do |tag| %>
                      <%= tag%>
            <% end %>
        </td>
         <% end %>
        <td><%= link_to 'Edit', edit_admin_product_path(@admin_product) , class: "btn btn-warning btn-sm"%> |
			<%= link_to 'Back', admin_products_path, class: "btn btn-primary btn-sm" %></td>

      </tr>
  </tbody>
</table>


