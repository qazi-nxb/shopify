<br>
<div class="container">
<h1 class="customheading display-4">Admin Products</h1>

<table class="table table-bordered table-hover bg-light ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Tags</th>
      <th> action </th>
    </tr>
  </thead>

  <tbody>
    <% @admin_products.each do |admin_product| %>
      <tr>
        <td><%= admin_product.name %></td>
        <td><%= admin_product.price %></td>
        <td><%= admin_product.description %></td>
          <td><% admin_product.tag_list.each do |tag| %>
              <%= tag%>
            <% end %></td>
        <td><%= link_to 'Show', [:admin, admin_product] , class: "btn btn-success btn-sm"%>
        <%= link_to 'Edit', edit_admin_product_path(admin_product), class: "btn btn-warning btn-sm" %>
        <%= link_to 'Destroy', [:admin, admin_product], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<div class="row">
  <div class="col-3">
    <%= link_to 'New Admin Product', new_admin_product_path , class: "btn btn-secondary btn-sm col-12" %>
  </div>
  <br>
  <div class="col-3">
    <%= link_to 'Export data', admin_products_path(format: 'csv') , class: "btn btn-secondary btn-sm col-12" %>
  </div>
  <br>
  <div class="col-6">
  <%= form_tag import_admin_products_path,class:"", multipart: true do %>
      <%= file_field_tag :file, class: "form-control col-8 float-left" %>
      <%= submit_tag 'Import CSV', class: "btn btn-primary col-4 float-right"%>
    <% end %>
  </div>
</div>
  <br>
  <div class="row">
    <%= will_paginate @admin_products, class: "digg_pagination mt-2 col-4 offset-4" %>
  </div>


</div>

