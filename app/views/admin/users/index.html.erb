<h1 class=" display-4  customheading">Users</h1>
<div class="container">
  <div class="col-12">
    <table class="table table-bordered table-hover bg-light ">
      <thead>
        <tr>
          <th>user id</th>
          <th>First Name</th>
          <th> Last name </th>
          <th> Email </th>
          <th> actions </th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Show', admin_user_path(user) , class: "btn btn-success btn-sm"%>
              <%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-warning btn-sm" %>

              <%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>
<%= will_paginate @orders, class: "digg_pagination" %>