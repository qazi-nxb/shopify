<br>

<h1 class="customheading display-4">Admin Categories</h1>

<table class="table table-bordered table-hover bg-light ">
  <thead>
  <tr>
    <th>Name</th>
    <th>Tags</th>
    <th> action </th>
  </tr>
  </thead>

  <tbody>
  <% @admin_categories.each do |category| %>
    <tr>
      <td><%= category.title %></td>
      <td><% category.tag_list.each do |tag| %>
          <%= tag %>
        <% end %></td>
      <td>
        <%= link_to 'Show', admin_category_path(category) , class: "btn btn-success btn-sm"%> |
        <%= link_to 'Edit', edit_admin_category_path(category), class: "btn btn-warning btn-sm" %> |
        <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<div class="center">
  <%= link_to 'New Admin Category', new_admin_category_path , class: "btn btn-secondary btn-sm" %>
</div>

<%= will_paginate @admin_categories, class: "digg_pagination mt-2" %>