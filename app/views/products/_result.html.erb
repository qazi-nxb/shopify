<div class="col-9">
  <%= render 'layouts/messages' %>
</div>
<% if @products %>
<% if @products.count != 0 %>
  <div class="col-9">
    <table class="table table-bordered table-hover bg-light ">
      <thead>
      <tr>
        <th> Product </th>
        <th> Product Name</th>
        <th> Product Price</th>
        <th> Actions </th>
      </tr>
      </thead>
      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= image_tag url_for(product.avatar), :alt => "Product image" ,class:"cartimg"%></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td>
            <div class=" d-flex justify-content-center">
              <%= form_for :product, url: {action: 'add_to_card', controller: 'cart'}, :html => {:class => "nifty_form", :method => "GET"} do |f| %>
                <%= f.hidden_field :product_id, :value => product.id %>
                <%= f.label :qty, "Quantity:" %>
                <%= f.number_field :qty, :value => 1, :min => 1 , class: "qbtn"%>
                <%= f.submit 'Add to Cart', class: "btn btn-primary"%>
              <% end %>
            </div>
          </td>


       </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<% end %>